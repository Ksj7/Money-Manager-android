<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="@dimen/popup_profile_width"
    android:layout_height="@dimen/popup_profile_height"
    android:background="@color/colorBackground"
    android:clipToPadding="false"
    android:fillViewport="false"
    android:fitsSystemWindows="true"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/profile_image_wrap_size"
            android:layout_height="@dimen/profile_image_wrap_size"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/gray_line">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />

        </LinearLayout>
        <Button
            android:id="@+id/phoneNumberBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="-"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/gray_round_line_selector" />
        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="확인"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="@drawable/gray_round_line_selector"  />
    </LinearLayout>
</ScrollView>